{
  "name": "@ehildt/depbadge",
  "description": "A github action that creates badges",
  "version": "1.0.1",
  "license": "MIT",
  "author": {
    "email": "eugen.hildt@gmail.com",
    "name": "Eugen Hildt"
  },
  "bugs": {
    "email": "eugen.hildt@gmail.com"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "build:prod": "tsc -p ./tsconfig.build.prod.json",
    "depcheck": "npx depcheck .",
    "depcruise": "npx dependency-cruiser -c .depcruise.mjs --ts-config tsconfig.json src",
    "format": "prettier --write .",
    "lint": "eslint ./src",
    "lint-staged": "npx lint-staged --allow-empty",
    "ncu:update": "npx npm-check-updates -u --format group",
    "ncu:interactive": "npx npm-check-updates -u --interactive --format group",
    "ncu:validate": "npx npm-check-updates -e 2 --packageFile=./package.json",
    "prebuild": "rimraf dist",
    "test": "jest --passWithNoTests",
    "test:clearCache": "jest --clearCache",
    "test:cov": "jest --coverage --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e ./env/.env.e2e -- jest --detectOpenHandles --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "lint:unused": "npx ts-unused-exports ./tsconfig.exclude.json --maxIssues=0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "@types/supertest": "^6.0.3",
    "depcheck": "^1.4.7",
    "dependency-cruiser": "^17.3.8",
    "dotenv-cli": "^11.0.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^4.0.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-extended": "^7.0.0",
    "jest-junit": "^16.0.0",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.4.1",
    "rimraf": "^6.1.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "ts-unused-exports": "^11.0.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  }
}
